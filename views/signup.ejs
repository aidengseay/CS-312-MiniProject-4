<%- include("partials/header.ejs", {userId}) %>

<body>

    <!-- sign up form -->
    <div class="small-tan-box">
        <form action="/create-account" method="POST">
            <h1 class="small-prompt">New Account Sign Up</h1>
            <br>
            <input class="small-write-prompt" type="text" name="username" placeholder="Username" required/>
            <input class="small-write-prompt" type="password" name="password" placeholder="Password" required/>
            <input class="small-write-prompt" type="text" name="disp-name" placeholder="Display Name" required/>
            <br>
            <input class="submit-btn button" type="submit" value="Signup">
        </form>
    </div>

    <!-- error if username is already taken -->
    <% if(locals.error) { %>
        
        <div class="small-white-box">
            <h1 class="small-prompt">Username already taken</h1>
        </div>

    <% } %>
    
</body>