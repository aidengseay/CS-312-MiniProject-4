<%- include("partials/header.ejs", {userId}) %>

<body>

    <!-- log in prompt -->
    <div class="small-tan-box">
        <form action="/access-account" method="POST">
            <h1 class="small-prompt">Log In</h1>
            <br>
            <input class="small-write-prompt" type="text" name="username" placeholder="Username" required/>
            <input class="small-write-prompt" type="password" name="password" placeholder="Password" required/>
            <br>
            <input class="submit-btn button" type="submit" value="Log In">
        </form>
    </div>

    <!-- log in error -->
    <% if(locals.error) { %>
        
        <div class="small-white-box">
            <h1 class="small-prompt">Wrong username or password</h1>
        </div>

    <% } %>

    <!-- create new account option -->
    <div class="small-tan-box">
        <form action="/signup" method="GET">
            <h1 class="small-prompt">Create New Account</h1>
            <br>
            <input class="submit-btn button" type="submit" value="New Account">
        </form>
    </div>

</body>